{
  "name": "vscode-bun-debugger-attach",
  "displayName": "Bun Debugger Auto-Attach",
  "description": "ðŸš€ Automatically discovers and attaches VS Code debugger to Bun processes on any port - zero configuration required",
  "version": "1.0.0",
  "publisher": "cjnoname",
  "icon": "icon.png",
  "author": {
    "name": "CJ"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cjnoname/vscode-bun-debugger-attach.git"
  },
  "bugs": {
    "url": "https://github.com/cjnoname/vscode-bun-debugger-attach/issues"
  },
  "homepage": "https://github.com/cjnoname/vscode-bun-debugger-attach#readme",
  "keywords": ["bun", "debugger", "auto-attach", "typescript", "javascript", "debug", "inspector", "development"],
  "categories": ["Debuggers", "Other"],
  "engines": {
    "vscode": "^1.104.2"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "bun",
        "label": "Bun",
        "languages": ["javascript", "typescript"],
        "configurationAttributes": {
          "attach": {
            "required": ["url"],
            "properties": {
              "url": {
                "type": "string",
                "default": "ws://127.0.0.1:9229/debugger"
              },
              "stopOnEntry": {
                "type": "boolean",
                "default": false
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.9.2",
    "vscode": "^1.1.37"
  }
}